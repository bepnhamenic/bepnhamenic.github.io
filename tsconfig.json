{
  "compilerOptions": {
      "lib": [
          "ES2017",
          "dom"
      ],
      "baseUrl": ".",
      "paths": {
          "*": [
              "ts/*"
          ]
      },
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "ES6",
      "outDir": "lib",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "saigon"
  ]
}
